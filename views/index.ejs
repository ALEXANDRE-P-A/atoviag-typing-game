      </button> -->

    </section>
    <!-- ----- button area ends here ----- -->

  </main>
  <!-- ----- main ends here ----- -->

  <%- include("./_share/footer.ejs") %>
  <%- include("./_share/javascripts.ejs") %>
  <!-- main page action js -->
  <script type="text/javascript" src="/public/js/main.js"></script>
  <!-- keypress type javascript -->
  <script type="text/javascript" src="/public/js/keypresstype.js"></script>
  <!-- textinput type javascript -->
