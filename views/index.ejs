  <main>

    <!-- ----- text action area starts here----- -->
    <section id="text_area">
      <div>
        <span id="typed"></span><span id="untyped"></span>
      </div>
    </section>
    <!-- ----- text action area ends here----- -->

    <!-- ----- button area starts here ----- -->
    <section class="btn_field">

      <% // if(locals.user) { %>
        <!-- keypress type button starts here -->
